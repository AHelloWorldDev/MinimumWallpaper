<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Settings">
        <!--<item name="android:colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <!-- Custom Action Bar style -->
    <style name="AppTheme.ActionBar" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:customNavigationLayout">@layout/action_set_wallpaper_custom_view</item>
    </style>

    <!-- Custom TextView style -->

    <style name="AppTheme.Label.Parent" parent="android:Widget.Material.TextView">
    </style>

    <!-- Custom EditText style -->
    <style name="AppTheme.EditText.Parent" parent="android:Widget.Material.EditText">
    </style>
</resources>